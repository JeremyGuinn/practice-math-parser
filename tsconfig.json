{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts",
    "lib/evaluator.ts",
    "lib/parser.ts",
    "lib/tokenizer.ts"
  ],
  "exclude": ["node_modules"]
}
